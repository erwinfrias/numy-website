extends ../template.pug
append variables
  - pageTitle       = 'Search Results'
  - metaDescription = "Are you looking for a Condo in Miami zones? Numy's Homes can help you!"
  - ogUrl           = ''
  - ogImage         = 'https://numyhomes.com/assets/images/numy.jpg'

block body
  //- Banner Section
  include ../includes/banner.pug
  +banner('Search results', 'numy-search-mobile.png', 'numy-search-tablet.png', 'numy-search.png')

  //- Breadcrumbs Section
  nav(class="breadcrumbs", aria-label="breadcrumbs")
    ol.breadcrumbs__container.l-container
      li.breadcrumbs__item
        a(class="breadcrumbs__link", href="./") Home #[span ‚ùØ]
      li.breadcrumbs__item
        a(class="breadcrumbs__link", id="propertyCity", href="javascript:void(0)")
      li.breadcrumbs__item: span(id="propertyType")

  //- Search Results Section
  section.exclusive
    .exclusive__container.l-container
      .exclusive__wrapper.exclusive__wrapper--view#property

    template#propertyTemplate
      article.card
        a(class="card__link", href="javascript:void(0)")
          img(class="card__image card__image--thumbnail", loading="lazy", src="", alt="")
          .card__property
            span.card__price
            p.card__offers
            address.card__address

  //- Navigation Section
  nav.navigation
    ol.navigation__container.l-container#navigation

    template#navigationTemplate
      li.navigation__item: a(class="navigation__link navigation__link--prev", href="javascript:void(0)") Prev
      li.navigation__item: a(class="navigation__link navigation__link--next", href="") Next
