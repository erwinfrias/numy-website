extends ../template.pug
append variables
  - pageTitle       = 'Exclusive Listings'
  - metaDescription = "Exclusive listings if you are looking for a property in all Miami zones through Numy's Homes."
  - ogUrl           = 'https://numyhomes.com/exclusive-listings.html'
  - ogImage         = 'https://numyhomes.com/assets/images/numy.jpg'

block body
  //- Banner Section
  include ../includes/banner.pug
  +banner('Exclusive Listings', 'numy-exclusive-mobile.png', 'numy-exclusive-tablet.png', 'numy-exclusive.png')

  //- Breadcrumbs Section
  include ../includes/breadcrumbs.pug
  +breadcrumbs('/exclusive-listings.html', pageTitle)

  //- Exclusive Listings Section
  section.exclusive
    .exclusive__container.l-container
      .exclusive__wrapper.exclusive__wrapper--view#property

    template#exclusiveTemplate
      article.card
        a(class="card__link", href="javascript:void(0)")
          img(class="card__image card__image--thumbnail", loading="lazy", src="", alt="")
          span.card__flag New Listing
          .card__property
            span.card__price
            p.card__offers
            address.card__address
